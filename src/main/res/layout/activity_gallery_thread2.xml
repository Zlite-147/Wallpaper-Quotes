<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    tools:context=".Thread.GalleryThread2">


    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/img_gallery_2_thread"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:background="#D3D3D3"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <ImageButton
            android:background="@android:color/transparent"
            android:id="@+id/download_view_gallery"
            android:layout_width="50dp"
            android:layout_height="59dp"
            android:layout_marginLeft="70dp"
            android:src="@drawable/ic_file_download_black_24dp" />


        <ImageButton
            android:id="@+id/share_view_gallery"
            android:layout_marginLeft="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_share_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />


        <ImageButton
            android:id="@+id/wallpaper_view_gallery"
            android:layout_marginLeft="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_wallpaper_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginLeft="60dp"
            android:text="Downloads"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginLeft="34dp"
            android:text="Share"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginLeft="40dp"
            android:text="Set Wallapaper"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>