<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zlite_147.wallpaperquotes">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_wallpaper_pink"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_wallpaper_pink"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Thread.GalleryThread" />
        <activity android:name=".Thread.GalleryThread2" />
        <activity android:name=".Thread.QuoteThread" />
        <activity android:name=".SplashScreen"></activity>
    </application>

</manifest>